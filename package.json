{
	"name": "@hkdigital/lib-core",
	"version": "0.5.73",
	"author": {
		"name": "HKdigital",
		"url": "https://hkdigital.nl"
	},
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/HKdigital/hkdigital--lib-core.git"
	},
	"keywords": [
		"component-library",
		"sveltekit",
		"skeleton",
		"tailwindcss",
		"runed",
		"valibot"
	],
	"scripts": {
		"dev": "run-s svelte:sync dev:start",
		"build": "run-s svelte:sync build:*",
		"preview": "vite preview",
		"check": "run-s svelte:sync check:run",
		"check:watch": "run-s svelte:sync check:watch-run",
		"format": "prettier --write .",
		"lint": "run-s lint:*",
		"test": "run-s test:unit-run",
		"test:file": "vitest run",
		"prepack": "run-s prepack:*",
		"publish:npm": "run-s publish:npm:version publish:npm:publish git:push",
		"upgrade:hk": "run-s upgrade:hk:update pnpm:install",
		"upgrade:all": "run-s upgrade:all:update pnpm:install",
		"svelte:sync": "svelte-kit sync",
		"dev:start": "vite dev --host",
		"build:vite": "vite build",
		"check:run": "svelte-check --tsconfig ./jsconfig.json",
		"check:watch-run": "svelte-check --tsconfig ./jsconfig.json --watch",
		"git:push": "git push",
		"cache:clear": "rm -rf node_modules/.cache/imagetools",
		"lint:prettier": "prettier --check .",
		"lint:eslint": "eslint .",
		"lint:imports": "node scripts/validate-imports.mjs",
		"test:unit": "vitest",
		"test:unit-run": "pnpm run test:unit -- --run",
		"prepack:sync": "svelte-kit sync",
		"prepack:build": "svelte-package",
		"prepack:lint": "publint",
		"prepack:imports": "node scripts/validate-imports.mjs",
		"publish:npm:version": "npm version patch",
		"publish:npm:publish": "npm publish --access public",
		"upgrade:hk:update": "ncu --dep dev,optional,peer,prod '@hkdigital/*' -u",
		"upgrade:all:update": "ncu --dep dev,optional,peer,prod -u",
		"pnpm:install": "pnpm install"
	},
	"files": [
		"dist",
		"scripts",
		"CLAUDE.md",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/testdata.*",
		"!dist/**/*.testdata.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./*": "./dist/*"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"postcss": "^8.5.6"
	},
	"peerDependencies": {
		"@eslint/js": "^9.33.0",
		"@skeletonlabs/skeleton": "^3.1.7",
		"@steeze-ui/heroicons": "^2.4.2",
		"@sveltejs/kit": "^2.37.1",
		"autoprefixer": "^10.4.21",
		"eslint-plugin-import": "^2.32.0",
		"jsonwebtoken": "^9.0.0",
		"pino": "^9.8.0",
		"pino-pretty": "^13.1.1",
		"runed": "^0.31.1",
		"svelte": "^5.38.1",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.11",
		"valibot": "^1.1.0",
		"vite-imagetools": "^8.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.57.0",
		"@skeletonlabs/skeleton": "3.1.7",
		"@skeletonlabs/skeleton-svelte": "1.3.1",
		"@steeze-ui/heroicons": "^2.4.2",
		"@sveltejs/adapter-auto": "^6.1.1",
		"@sveltejs/adapter-node": "^5.5.0",
		"@sveltejs/kit": "^2.49.4",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/svelte": "^5.3.1",
		"@testing-library/user-event": "^14.6.1",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.10.8",
		"autoprefixer": "^10.4.23",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-svelte": "^3.14.0",
		"fake-indexeddb": "^6.2.5",
		"globals": "^16.5.0",
		"jsdom": "^26.1.0",
		"jsonwebtoken": "^9.0.3",
		"npm-check-updates": "^18.3.1",
		"npm-run-all": "^4.1.5",
		"pino": "^9.14.0",
		"pino-pretty": "^13.1.3",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.16",
		"standardized-audio-context-mock": "^9.7.24",
		"svelte": "^5.46.3",
		"svelte-check": "^4.3.5",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-imagetools": "^8.0.0",
		"vitest": "^3.2.4"
	}
}
