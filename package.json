{
	"name": "@hkdigital/lib-sveltekit",
	"version": "0.1.31",
	"author": {
		"name": "HKdigital",
		"url": "https://hkdigital.nl"
	},
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/HKdigital/hkdigital--lib-sveltekit.git"
	},
	"keywords": [
		"component-library",
		"sveltekit",
		"skeleton",
		"tailwindcss",
		"runed",
		"valibot"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"publish:npm": "npm version patch && npm publish --access public && git push",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"upgrade:all": "ncu -u && pnpm install"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/testdata.*",
		"!dist/**/*.testdata.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./*": "./dist/*"
	},
	"peerDependencies": {
		"@steeze-ui/heroicons": "^2.4.2",
		"@sveltejs/kit": "^2.15.2",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"runed": "^0.23.0",
		"svelte": "^5.0.0",
		"valibot": "^0.42.1",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@playwright/test": "^1.50.1",
		"@skeletonlabs/skeleton": "3.0.0-next.2",
		"@skeletonlabs/skeleton-svelte": "1.0.0-next.4",
		"@steeze-ui/heroicons": "^2.4.2",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/package": "2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/typography": "^0.5.16",
		"@types/eslint": "^9.6.1",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.0.2",
		"eslint-plugin-svelte": "^3.0.2",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"postcss": "^8.5.3",
		"postcss-mixins": "^11.0.3",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.7",
		"standardized-audio-context-mock": "^9.7.16",
		"svelte": "^5.20.5",
		"svelte-check": "^4.1.4",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.8.2",
		"vite": "^6.2.0",
		"vite-imagetools": "^7.0.5",
		"vitest": "^3.0.7",
		"zod": "^3.24.2"
	}
}
