{
	"name": "@hkdigital/lib-sveltekit",
	"version": "0.0.83",
	"author": "Jens Kleinhout, HKdigital (https://hkdigital.nl)",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/HKdigital/hkdigital--lib-sveltekit.git"
	},
	"keywords": [
		"component-library",
		"sveltekit",
		"skeleton",
		"tailwindcss",
		"runed",
		"valibot"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"publish:npm": "npm version patch && npm publish --access public && git push",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"upgrade:all": "ncu -u && pnpm install"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/testdata.*",
		"!dist/**/*.testdata.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		"./*": "./dist/*"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/eslint": "^9.6.1",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"publint": "^0.2.12",
		"standardized-audio-context-mock": "^9.7.15",
		"svelte": "^5.16.0",
		"svelte-check": "^4.1.1",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2",
		"vite": "^6.0.5",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"@sveltejs/kit": "^2.15.0",
		"runed": "^0.22.0",
		"valibot": "^0.42.1",
		"zod": "^3.24.1"
	}
}
