/**
 * Tailwind defaults
 *
 * text-sm 14px;
 * text-base 16px;
 * text-lg 18px;
 * text-xl 20px;
 * text-2xl 24px;
 * text-3xl 30px;
 * text-4xl 36px;
 * text-5xl 48px;
 * text-6xl 60px;
 * text-7xl 72px;
 * text-8xl 96px;
 * text-9xl 128px;
 *
 * @see https://tailwindcss.com/docs/font-size
 */

@define-mixin all_text {

  a {
    @apply text-sm font-bold underline;
  }

  p {
    @apply text-xl;
  }

  h1 {
    &.text-presenter-title {      
      @apply text-5xl;
    }
  }
}